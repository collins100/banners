* {
	margin: 0;
	padding: 0;
	border: 0;
}
a,
.text_link {
	cursor: pointer;
	color: inherit;
	text-decoration: none;
}
h1, h2, h3, h4, h5, h6 {
	font-weight: normal;
}

#banner_frame {
	float: left;
	position: relative;
	width: 298px;
	height: 248px;
	color: #333366;
	font-family: Arial, Helvetica, sans-serif;
	border: solid 1px #000;
	overflow: hidden;
	background: #fff;
}

#bg-exit {
	position: absolute;
	top: 0;
	cursor: pointer;
	height: 100%;
	width: 100%;
	height: calc( 100% - 2px );
	width: calc( 100% - 2px );
	overflow: hidden;
}


/*		snowflakes		*/

#snowflakes {
	position: absolute;
	z-index: 1;
	width: 100%;
	height: 200%;
	background: url(snowflake.png) top left repeat;
}

#twinkle {
	position: absolute;
	z-index: 2;
	top: -25%;
	left: -25%;
	width: 150%;
	height: 150%;
	background: url(Snowflake-Mask.png) top left repeat;
	background-size: cover;
}


/*		basic slide styles		*/

#stage {
	display: block;
	position: relative;
	width: 100%;
	height: 100%;
}
#logo_small {
	position: absolute;
	z-index: 5;
	top: 200px;
	left: 132px;
}
#logo_lockup {
	opacity: 0;
	position: absolute;
	z-index: 5;
	top: 182px;
	left: 102px;
	line-height: 0;
}
#disclaimer_pos {
	opacity: 0;
	position: absolute;
	z-index: 9999;
	bottom: 2px;
	width: 100%;
	color: #999;
	font-size: 8px;
	line-height: 8px;
	text-align: center;
}
#disclaimer_size {
	display: block;
	width: 90%;
	margin: 0 auto;
}

.slide {
	position: absolute;
	z-index: 3;
	left: 0;
	top: 0;
	opacity: 0;
	width: 300px;
	height: 250px;
}
.centering {
	display: table-cell;
	vertical-align: middle;
	width: 300px;
	height: 225px;
	text-align: center;
}

p {
	font-size: 15px;
	line-height: 20px;
	text-transform: uppercase;
	font-weight: bold;
}
sup {
	font-size: 60%;
	vertical-align: top;
	line-height: 150%;
}

.button {
	display: inline-block;
	margin-top: 10px;
	padding: 13px 25px;
	color: #fff;
	font-size: 11px;
	line-height: 0;
	font-weight: bold;
	background: #333366;
	border-radius: 3px;
}
#bg-exit:hover .button {
	color: #333366;
	background: #ededed;
}

