/*		difficult slide styles		*/


.textimagebg {
	width: 90%;
	height: 45%;
	margin: 0 auto;
	margin-top: calc(40% - (45% / 2));
	background: #fff;
	border-radius: 25%;
	filter: blur(5px);
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
}
.textimage {
	position: absolute;
	top: 0;
	left:0;
	width: 300px;
	height: 250px;
	text-indent: -9999em;
	overflow: hidden;
	background: url(frame1.png);
}
.flourish {
	position: absolute;
	top: 0;
	width: 100%;
	height: 100%;
}
.flourish_top {
    top: 1px;
    left: -19px;
	background: url(USPS_Consumer_Banner_FreeBoxes_300x250_Top_Flourish_20150930.png) top left no-repeat;
}
.flourish_bottom {
	right: -31px;
    top: 5px;
	background: url(USPS_Consumer_Banner_FreeBoxes_300x250_Bottom_Flourish_20150930.png) top right no-repeat;
}








