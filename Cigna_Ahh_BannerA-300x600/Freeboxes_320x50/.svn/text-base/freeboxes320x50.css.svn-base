/*		difficult slide styles		*/


.textimagebg {
	width: 85%;
	height: 75%;
	margin: 0 5px;
	margin-top: 5px;
	background: #fff;
	border-radius: 25%;
	filter: blur(5px);
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
}
.textimage {
	position: absolute;
	top: 0;
	width: 100%;
	height: 100%;
	text-indent: -9999em;
	overflow: hidden;
	background: url(USPS_Consumer_Banner_FreeBoxes_320x50_Title_20150930.png);
}
.flourish {
	position: absolute;
	top: 0;
	width: 100%;
	height: 100%;
}
.flourish_top {
	left: 0;
	background: url(USPS_Consumer_Banner_FreeBoxes_320x50_Top_Flourish_20150930.png) top left no-repeat;
}
.flourish_bottom {
	right: 0;
	background: url(USPS_Consumer_Banner_FreeBoxes_320x50_Bottom_Flourish_20150930.png) top right no-repeat;
}








